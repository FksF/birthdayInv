---
import RSVPForm from '../components/RSVPForm.tsx';
import '../styles/global.css';

const title = "🎉 ¡Estás Invitado a mi Cumpleaños! - 22 de Octubre 2025";
const description = "Solo una tomada más entre patas 🎂 Te invito a celebrar mi cumpleaños el 22 de octubre desde las 11 AM en Miraflores. ¡Confirma tu asistencia!";
---
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description}>
    <meta name="robots" content="index, follow">
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="event">
    <meta property="og:title" content="🎉 ¡Estás Invitado a mi Cumpleaños! - 22 de Octubre 2025">
    <meta property="og:description" content="Solo una tomada más entre patas 🎂 Te invito a celebrar mi cumpleaños el 22 de octubre desde las 11 AM en Miraflores. ¡Confirma tu asistencia!">
    <meta property="og:url" content="https://birthday-invitation.vercel.app/">
    <meta property="og:site_name" content="Invitación de Cumpleaños">
    <meta property="event:start_time" content="2025-10-22T11:00:00-05:00">
    <meta property="event:location" content="Ca. Ramón Castilla 399-383, Miraflores, Lima, Perú">
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:title" content="🎉 ¡Estás Invitado a mi Cumpleaños! - 22 de Octubre 2025">
    <meta property="twitter:description" content="Solo una tomada más entre patas 🎂 Te invito a celebrar mi cumpleaños el 22 de octubre desde las 11 AM en Miraflores. ¡Confirma tu asistencia!">
    
    <!-- PWA -->
    <link rel="manifest" href="/manifest.json">
    <meta name="theme-color" content="#a855f7">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="default">
    <meta name="apple-mobile-web-app-title" content="Cumpleaños">
    
    <!-- Favicon -->
    <link rel="icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>🎂</text></svg>">
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Poppins:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    
    <!-- Structured Data -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Event",
      "name": "Celebración de Cumpleaños",
      "description": "Solo una tomada más entre patas - Celebración de cumpleaños",
      "startDate": "2025-10-22T11:00:00-05:00",
      "location": {
        "@type": "Place",
        "name": "Miraflores",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "Ca. Ramón Castilla 399-383",
          "addressLocality": "Miraflores",
          "addressCountry": "PE"
        }
      },
      "organizer": {
        "@type": "Person",
        "name": "Cumpleañero"
      },
      "eventStatus": "https://schema.org/EventScheduled",
      "eventAttendanceMode": "https://schema.org/OfflineEventAttendanceMode"
    }
    </script>
</head>
<body class="font-sans bg-gradient-to-br from-purple-900 via-purple-800 to-indigo-900 min-h-screen">
    <!-- Hero Section -->
    <section class="relative overflow-hidden">
        <!-- Background decorations -->
        <div class="absolute inset-0 opacity-20">
            <div class="absolute top-10 left-10 w-20 h-20 bg-yellow-400 rounded-full animate-float"></div>
            <div class="absolute top-40 right-20 w-16 h-16 bg-pink-400 rounded-full animate-float" style="animation-delay: 1s;"></div>
            <div class="absolute bottom-20 left-1/4 w-12 h-12 bg-blue-400 rounded-full animate-float" style="animation-delay: 2s;"></div>
            <div class="absolute top-1/2 right-1/4 w-24 h-24 bg-green-400 rounded-full animate-float" style="animation-delay: 0.5s;"></div>
        </div>

        <div class="container mx-auto px-4 py-20 relative z-10">
            <div class="text-center">
                <!-- Date Badge -->
                <div class="inline-block bg-gradient-to-r from-yellow-400 to-orange-500 text-black font-bold px-6 py-2 rounded-full mb-8 text-lg">
                    22 DE OCTUBRE
                </div>
                
                <!-- Main Title -->
                <h1 class="text-6xl md:text-8xl font-heading font-bold text-white mb-6 leading-tight">
                    ¡ES MI
                    <br>
                    <span class="bg-gradient-to-r from-yellow-400 via-pink-500 to-purple-500 bg-clip-text text-transparent animate-pulse-slow">
                        CUMPLEAÑOS!
                    </span>
                </h1>
                
                <!-- Subtitle -->
                <p class="text-xl md:text-2xl text-purple-100 mb-8 max-w-2xl mx-auto">
                    Solo una tomada más entre patas 🎉
                </p>
                
                <!-- Time and Place -->
                <div class="flex flex-col md:flex-row gap-6 justify-center items-center mb-12">
                    <div class="bg-black/30 backdrop-blur-sm rounded-lg p-6 border border-purple-500/30">
                        <div class="text-yellow-400 font-semibold mb-2">🕐 HORA</div>
                        <div class="text-white text-xl">Desde las 11 AM</div>
                    </div>
                    <div class="bg-black/30 backdrop-blur-sm rounded-lg p-6 border border-purple-500/30">
                        <div class="text-yellow-400 font-semibold mb-2">📍 LUGAR</div>
                        <div class="text-white text-xl">Miraflores</div>
                        <div class="text-purple-200 text-sm">Ca. Ramón Castilla 399-383</div>
                    </div>
                </div>
                
                <!-- CTA Button -->
                <a href="#confirmar" class="inline-block bg-gradient-to-r from-pink-500 to-purple-600 hover:from-pink-600 hover:to-purple-700 text-white font-bold py-4 px-8 rounded-full text-lg transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl">
                    ¡CONFIRMAR ASISTENCIA!
                </a>
            </div>
        </div>
    </section>

    <!-- Location Section -->
    <section class="py-20 bg-black/20 backdrop-blur-sm">
        <div class="container mx-auto px-4">
            <h2 class="text-4xl md:text-5xl font-heading font-bold text-center text-white mb-12">
                📍 UBICACIÓN
            </h2>
            
            <div class="max-w-4xl mx-auto">
                <div class="bg-black/30 backdrop-blur-sm rounded-2xl p-8 border border-purple-500/30">
                    <h3 class="text-2xl font-semibold text-white mb-4 text-center">
                        Ca. Ramón Castilla 399-383, Miraflores
                    </h3>
                    
                    <div class="rounded-xl overflow-hidden shadow-2xl">
                        <iframe 
                            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d956.9206379753497!2d-71.51949733036646!3d-16.390125712415124!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x91424bb1f5122247%3A0xa0f3dcdc49e84045!2sCa.%20Ramon%20Castilla%20399-383%2C%20Miraflores%2004004!5e0!3m2!1ses-419!2spe!4v1760503983564!5m2!1ses-419!2spe" 
                            width="100%" 
                            height="450" 
                            style="border:0;" 
                            allowfullscreen="" 
                            loading="lazy" 
                            referrerpolicy="no-referrer-when-downgrade"
                            class="w-full">
                        </iframe>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- RSVP Section -->
    <section id="confirmar" class="py-20">
        <div class="container mx-auto px-4">
            <h2 class="text-4xl md:text-5xl font-heading font-bold text-center text-white mb-12">
                ✨ CONFIRMA TU ASISTENCIA
            </h2>
            
            <div class="max-w-2xl mx-auto">
                <RSVPForm client:load />
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="py-12 bg-black/40 backdrop-blur-sm border-t border-purple-500/30">
        <div class="container mx-auto px-4 text-center">
            <div class="text-3xl mb-4">🎂🎉🥳</div>
            <p class="text-purple-200 mb-2">
                ¡No faltes! Va a estar increíble
            </p>
            <p class="text-purple-300 text-sm">
                22 de Octubre 2025 • Desde las 11 AM • Miraflores
            </p>
        </div>
    </footer>


</body>
</html>