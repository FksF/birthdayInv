---
import HeroRSVPButton from '../components/HeroRSVPButton.tsx';
import '../styles/global.css';

const title = "🎉 ¡Estás Invitado a mi Cumpleaños! - 22 de Octubre 2025";
const description = "Solo una tomada más entre patas 🎂 Te invito a celebrar mi cumpleaños el 22 de octubre desde las 11 AM en Miraflores. ¡Confirma tu asistencia!";
---
<!DOCTYPE html>
<html lang="es" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description}>
    <meta name="robots" content="index, follow">
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="event">
    <meta property="og:title" content="🎉 ¡Estás Invitado a mi Cumpleaños! - 22 de Octubre 2025">
    <meta property="og:description" content="Solo una tomada más entre patas 🎂 Te invito a celebrar mi cumpleaños el 22 de octubre desde las 11 AM en Miraflores. ¡Confirma tu asistencia!">
    <meta property="og:url" content="https://birthday-invitation.vercel.app/">
    <meta property="og:site_name" content="Invitación de Cumpleaños">
    <meta property="event:start_time" content="2025-10-22T11:00:00-05:00">
    <meta property="event:location" content="Ca. Ramón Castilla 399-383, Miraflores, Lima, Perú">
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:title" content="🎉 ¡Estás Invitado a mi Cumpleaños! - 22 de Octubre 2025">
    <meta property="twitter:description" content="Solo una tomada más entre patas 🎂 Te invito a celebrar mi cumpleaños el 22 de octubre desde las 11 AM en Miraflores. ¡Confirma tu asistencia!">
    
    <!-- PWA -->
    <link rel="manifest" href="/manifest.json">
    <meta name="theme-color" content="#a855f7">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="default">
    <meta name="apple-mobile-web-app-title" content="Cumpleaños">
    
    <!-- Favicon -->
    <link rel="icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>🎂</text></svg>">
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Frijole&family=Inter+Display:wght@300;400;500;600;700&family=JetBrains+Mono:wght@300;400;500;600&display=swap" rel="stylesheet">
    
    <!-- Structured Data -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Event",
      "name": "Celebración de Cumpleaños",
      "description": "Solo una tomada más entre patas - Celebración de cumpleaños",
      "startDate": "2025-10-22T11:00:00-05:00",
      "location": {
        "@type": "Place",
        "name": "Miraflores",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "Ca. Ramón Castilla 399-383",
          "addressLocality": "Miraflores",
          "addressCountry": "PE"
        }
      },
      "organizer": {
        "@type": "Person",
        "name": "Cumpleañero"
      },
      "eventStatus": "https://schema.org/EventScheduled",
      "eventAttendanceMode": "https://schema.org/OfflineEventAttendanceMode"
    }
    </script>
</head>
<body class="font-sans min-h-screen scroll-smooth relative">
    <!-- Video de fondo -->
    <div class="fixed inset-0 w-full h-full overflow-hidden z-[-1]">
        <!-- Fallback background gradient -->
        <div class="absolute inset-0 bg-gradient-to-br from-purple-900 via-blue-900 to-indigo-900"></div>
        
        <!-- Video de fondo con efecto -->
        <video 
            id="bg-video"
            autoplay 
            loop 
            muted 
            playsinline
            preload="auto"
            webkit-playsinline="true"
            x-webkit-airplay="allow"
            class="absolute inset-0 w-full h-full object-cover opacity-60"
            poster="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg'/%3E"
        >
            <!-- Puedes usar videos de fondo gratuitos de estos sitios:
                 - https://www.pexels.com/search/videos/party%20confetti/
                 - https://pixabay.com/videos/search/celebration/
                 - https://coverr.co/
                 
                 Recomendaciones:
                 - Video de partículas/confetti
                 - Video de luces bokeh
                 - Video de estrellas/galaxia
                 - Video de fuegos artificiales suaves
            -->
            <source src="/videos/celebration-bg.mp4" type="video/mp4">
            <source src="/videos/celebration-bg.webm" type="video/webm">
        </video>
        
        <!-- Overlay para mejorar contraste del texto -->
        <div class="absolute inset-0 bg-gradient-to-b from-black/40 via-transparent to-black/60"></div>
    </div>
    
    <!-- Partículas flotantes ligeras (opcional, mantener pocas) -->
    <div class="floating-particles-layer">
        <div class="cosmic-particle" style="top: 10%; left: 5%; animation-delay: 0s;"></div>
        <div class="cosmic-particle" style="top: 70%; left: 85%; animation-delay: 2s;"></div>
    </div>
    
    <!-- Hero Section -->
    <section class="relative overflow-hidden min-h-screen flex items-center">
        <!-- Background decorations - Reducidos para mejor rendimiento en móvil -->
        <div class="absolute inset-0 opacity-30">
            <div class="absolute top-10 left-4 sm:left-10 w-12 h-12 sm:w-20 sm:h-20 bg-gradient-to-br from-yellow-400 to-red-500 rounded-full animate-float galaxy-glow"></div>
            <div class="absolute top-32 sm:top-40 right-4 sm:right-20 w-10 h-10 sm:w-16 sm:h-16 bg-gradient-to-br from-pink-400 to-indigo-500 rounded-full animate-float" style="animation-delay: 1s;"></div>
            <div class="absolute bottom-32 sm:bottom-20 left-1/4 w-8 h-8 sm:w-12 sm:h-12 bg-gradient-to-br from-blue-400 to-teal-500 rounded-full animate-float" style="animation-delay: 2s;"></div>
        </div>

        <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12 sm:py-16 lg:py-20 relative z-10 w-full">
            <div class="text-center">
                <!-- Date Badge -->
                <div class="inline-block bg-gradient-to-r from-yellow-400 to-orange-500 text-black font-heading heading-soft px-3 py-1.5 sm:px-5 sm:py-2 rounded-full mb-6 sm:mb-8 text-xs sm:text-base animate-bounce">
                    22 DE OCTUBRE
                </div>
                
                <!-- Main Title -->
                <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-heading heading-bold text-white mb-4 sm:mb-6 leading-relaxed px-2 text-shadow">
                    ¡ES MI
                    <br>
                    <span class="bg-gradient-to-r from-yellow-400 via-pink-500 to-purple-500 bg-clip-text text-transparent animate-pulse-slow galaxy-glow">
                        CUMPLEAÑOS!
                    </span>
                </h1>
                
                <!-- Subtitle -->
                <p class="text-lg sm:text-xl lg:text-2xl text-purple-100 font-heading text-elegant mb-6 sm:mb-8 max-w-2xl mx-auto px-4">
                    Será solo una tomada más entre patas, te apuntas ? 🍻
                </p>
                
                <!-- Time and Place -->
                <div class="flex flex-col sm:flex-row gap-3 sm:gap-6 justify-center items-stretch mb-8 sm:mb-12 px-4">
                    <div class="bg-black/40 backdrop-blur-md rounded-lg p-3 sm:p-5 border border-purple-500/40 w-full sm:w-64 flex flex-col justify-center cosmic-hover galaxy-glow min-h-[120px] sm:min-h-[140px]">
                        <div class="text-yellow-400 font-heading heading-soft mb-2 text-xs sm:text-sm">🕐 HORA</div>
                        <div class="text-white text-base sm:text-lg font-sans text-elegant">Desde las 11 AM</div>
                    </div>
                    <a 
                        href="#ubicacion" 
                        class="bg-black/40 backdrop-blur-md rounded-lg p-3 sm:p-5 border border-purple-500/40 w-full sm:w-64 flex flex-col justify-center cosmic-hover galaxy-glow transition-all duration-300 hover:scale-105 hover:border-yellow-400/60 hover:bg-black/60 cursor-pointer group min-h-[120px] sm:min-h-[140px]"
                    >
                        <div class="text-yellow-400 font-heading heading-soft mb-2 text-xs sm:text-sm group-hover:animate-pulse">📍 LUGAR</div>
                        <div class="text-white text-base sm:text-lg font-sans text-elegant group-hover:text-yellow-200 transition-colors">Miraflores</div>
                        <div class="text-purple-200 text-xs font-sans text-soft group-hover:text-purple-100 transition-colors">Ca. Ramón Castilla 399-383</div>
                        <div class="text-yellow-400/70 text-[10px] sm:text-xs font-sans text-soft mt-2 group-hover:text-yellow-300 transition-colors">
                            👆 Click para ver el mapa
                        </div>
                    </a>
                </div>
                
                <!-- CTA Button -->
                <div class="px-4">
                    <HeroRSVPButton client:load />
                </div>
            </div>
        </div>
    </section>

    <!-- Location Section -->
    <section id="ubicacion" class="py-12 sm:py-16 lg:py-20 bg-black/20 backdrop-blur-sm scroll-mt-20">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
            <h2 class="text-3xl sm:text-4xl lg:text-5xl font-heading heading-bold text-center text-white mb-8 sm:mb-12">
                📍 UBICACIÓN
            </h2>
            
            <div class="max-w-4xl mx-auto">
                <div class="bg-black/40 backdrop-blur-md rounded-2xl p-4 sm:p-6 lg:p-8 border border-purple-500/40 cosmic-hover galaxy-glow">
                    <h3 class="text-lg sm:text-xl lg:text-2xl font-sans text-refined text-white mb-4 text-center px-2">
                        Ca. Ramón Castilla 399-383, Miraflores
                    </h3>
                    
                    <div class="rounded-xl overflow-hidden shadow-2xl">
                        <iframe 
                            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d956.9206379753497!2d-71.51949733036646!3d-16.390125712415124!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x91424bb1f5122247%3A0xa0f3dcdc49e84045!2sCa.%20Ramon%20Castilla%20399-383%2C%20Miraflores%2004004!5e0!3m2!1ses-419!2spe!4v1760503983564!5m2!1ses-419!2spe" 
                            width="100%" 
                            height="300"
                            style="border:0;" 
                            allowfullscreen="" 
                            loading="lazy" 
                            referrerpolicy="no-referrer-when-downgrade"
                            class="w-full h-64 sm:h-80 lg:h-96">
                        </iframe>
                    </div>
                </div>
            </div>
        </div>
    </section>



    <!-- Footer - Mejorado -->
    <footer class="relative py-12 sm:py-16 bg-gradient-to-b from-black/50 via-purple-900/30 to-black/70 backdrop-blur-md border-t border-purple-500/40 overflow-hidden">
        <!-- Efectos de fondo -->
        <div class="absolute inset-0 opacity-20">
            <div class="absolute top-10 left-10 w-32 h-32 bg-gradient-to-br from-pink-500 to-purple-500 rounded-full blur-3xl animate-pulse"></div>
            <div class="absolute bottom-10 right-10 w-40 h-40 bg-gradient-to-br from-blue-500 to-cyan-500 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
        </div>

        <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
            <!-- Main Content -->
            <div class="text-center mb-8">
                <!-- Animated Icons -->
                <div class="flex justify-center gap-3 sm:gap-4 mb-6 text-3xl sm:text-4xl">
                    <span class="animate-bounce" style="animation-delay: 0s;">🎂</span>
                    <span class="animate-bounce" style="animation-delay: 0.1s;">🎉</span>
                    <span class="animate-bounce" style="animation-delay: 0.2s;">🥳</span>
                    <span class="animate-bounce" style="animation-delay: 0.3s;">🍻</span>
                    <span class="animate-bounce" style="animation-delay: 0.4s;">🎊</span>
                </div>

                <!-- Main Message -->
                <h3 class="text-2xl sm:text-3xl lg:text-4xl font-heading heading-bold mb-4 bg-gradient-to-r from-yellow-300 via-pink-300 to-purple-300 bg-clip-text text-transparent">
                    ¡No faltes! Va a estar increíble
                </h3>

                <!-- Event Details Cards -->
                <div class="flex flex-col sm:flex-row gap-3 justify-center items-center max-w-3xl mx-auto mb-8">
                    <div class="bg-purple-500/20 backdrop-blur-sm border border-purple-400/30 rounded-2xl px-4 py-3 w-full sm:w-auto">
                        <div class="text-yellow-400 text-xs font-heading mb-1">📅 FECHA</div>
                        <div class="text-white font-sans text-sm sm:text-base">22 de Octubre 2025</div>
                    </div>
                    
                    <div class="bg-cyan-500/20 backdrop-blur-sm border border-cyan-400/30 rounded-2xl px-4 py-3 w-full sm:w-auto">
                        <div class="text-yellow-400 text-xs font-heading mb-1">🕐 HORA</div>
                        <div class="text-white font-sans text-sm sm:text-base">Desde las 11 AM</div>
                    </div>
                    
                    <div class="bg-pink-500/20 backdrop-blur-sm border border-pink-400/30 rounded-2xl px-4 py-3 w-full sm:w-auto">
                        <div class="text-yellow-400 text-xs font-heading mb-1">📍 LUGAR</div>
                        <div class="text-white font-sans text-sm sm:text-base">Miraflores</div>
                    </div>
                </div>

                <!-- Tagline -->
                <p class="text-purple-200/80 text-sm sm:text-base italic mb-6 px-4">
                    "Solo una tomada más entre patas" 🍺✨
                </p>

                <!-- Divider -->
                <div class="w-32 h-1 bg-gradient-to-r from-transparent via-purple-400 to-transparent mx-auto mb-6"></div>

                <!-- Copyright / Final Message -->
                <p class="text-purple-300/60 text-xs sm:text-sm">
                    Hecho con 💜 y mucha 🍺 🍻🍺 🍻
                </p>
            </div>
        </div>
    </footer>

    <!-- Script para forzar autoplay del video en móviles -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const video = document.getElementById('bg-video') as HTMLVideoElement;
            
            if (video) {
                // Configurar atributos necesarios
                video.muted = true;
                video.playsInline = true;
                video.setAttribute('playsinline', '');
                video.setAttribute('webkit-playsinline', '');
                
                // Intentar reproducir el video
                const playPromise = video.play();
                
                if (playPromise !== undefined) {
                    playPromise.then(() => {
                        console.log('Video playing successfully');
                    }).catch((error: Error) => {
                        console.log('Autoplay prevented:', error);
                        
                        // Intentar reproducir en el primer toque/click del usuario
                        const playOnInteraction = () => {
                            video.play().then(() => {
                                console.log('Video started after user interaction');
                            }).catch((err: Error) => {
                                console.log('Still failed to play:', err);
                            });
                            
                            // Remover listeners después del primer intento
                            document.removeEventListener('touchstart', playOnInteraction);
                            document.removeEventListener('click', playOnInteraction);
                        };
                        
                        document.addEventListener('touchstart', playOnInteraction, { once: true });
                        document.addEventListener('click', playOnInteraction, { once: true });
                    });
                }
            }
        });
    </script>

</body>
</html>